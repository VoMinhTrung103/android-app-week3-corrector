<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="18dp"
    tools:ignore="ExtraText"
    android:background="#FCE4EC">  <!-- Nền màu hồng nhạt -->

    <!-- Tiêu đề có nền vàng, căn giữa và fit khung -->
    <TextView
        android:text="HỌC SINH LỚP 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:padding="12dp"
        android:background="#FFC107"
        android:textStyle="bold"/>

    <!-- Nhóm nhập liệu, căn trái -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"

        android:paddingTop="12dp">

        <TextView
            android:text="Học sinh nhập:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textStyle="italic"/>

        <EditText
            android:id="@+id/editTextStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập nội dung của bạn"
            android:minHeight="56dp"
            android:background="#FFFFFF"
            android:padding="40dp"/>
    </LinearLayout>

    <!-- Hiển thị kết quả -->
    <TextView
        android:id="@+id/textViewCorrected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"/>

    <!-- Nút fit với khung -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#673AB7"
        android:text="Nộp Bài"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        android:textSize="26sp"
        android:padding="8dp"/>

    <Button
        android:id="@+id/btnClear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#673AB7"
        android:text="Xóa"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        android:textSize="26sp"
        android:padding="12dp"/>
</LinearLayout>
