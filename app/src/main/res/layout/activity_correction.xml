<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="#E3F2FD">  <!-- Nền xanh nhạt -->

    <!-- Tiêu đề căn giữa -->
    <TextView
        android:text="CÔ GIÁO DẠY CHÍNH TẢ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:padding="12dp"
        android:background="#FFC107"/>  <!-- Thanh tiêu đề vàng -->

    <!-- Ô nhập đoạn văn, căn full chiều rộng -->
    <TextView
        android:text="Đoạn văn của học sinh:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="start"
        android:textSize="26sp"
        android:textStyle="italic"/>  <!-- Căn trái -->

    <EditText
        android:id="@+id/editTextCorrected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:textSize="16sp"
        tools:ignore="SpeakableTextPresentCheck" />

    <!-- Nút đã sửa lại -->
    <Button
        android:id="@+id/btnCorrect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#009688"
        android:padding="12dp"
        android:text="Đã sửa lại"
        android:textColor="#000000"
        android:textSize="26sp"
        />

    <!-- Nút khôi phục -->
    <Button
        android:id="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#009688"
        android:padding="12dp"
        android:text="Khôi phục"
        android:textColor="#000000"
        android:textSize="26sp" />

</LinearLayout>
